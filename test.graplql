query FetchProducts {
  products (id:"2") {
    data {
      id
      title
      price
      product_images {
        image
      }
    }
    total
    per_page
  }
}
query FetchProductsList {
  products(limit:10, page:2 ) {
    data {
      id
      title
      price
      product_images {
        image
      }
    }
    total
    per_page
    current_page
  }
}
query fetchUsers {
  users (id: 1) {
    data {
      id
      email
      name
      user_profiles {
        avatar
        first_name
        last_name
      }
    }
    total
    per_page
  }
}

query fetchUsersList {
  users (limit:4, page:3) {
      data {
      	id
      	email
      	name
      	user_profiles {
        	avatar
        	first_name
        	last_name
      	}
      }
    total
    per_page      
  }
}
