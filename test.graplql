query FetchProducts {
  products (id:"2") {
    data {
      id
      title
      price
      product_images {
        image
      }
      users{
        id
        name
        email
      }
    }
    total
    per_page
  }
}
query FetchProductsList {
  products(limit:10, page:2 ) {
    data {
      id
      title
      price
      product_images {
        image
      }
      user_id
    }
    total
    per_page
    current_page
  }
}
query fetchUsers {
  users (id: 8) {
    data {
      id
      email
      name
      user_profiles {
        avatar
        first_name
        last_name
      }
      products{
        id
        title
        price
        users {
          id
          name
        }
      }
    }
    total
    per_page
  }
}

query fetchUsersList {
